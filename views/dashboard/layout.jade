doctype html
html
    head
        link( rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
        link(rel='stylesheet' href="/css/dashboard.css")
        link(rel="icon", href="/logo.png")
        link(href='https://fonts.googleapis.com/css?family=Montserrat', rel='stylesheet')
        meta(name='viewport', content='width=device-width initial-scale=1')
        title Nu Magic - New magic and you
    body
        nav.navbar.navbar-default
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="/") Nu Magic
                .collapse.navbar-collapse#navbar
                    ul.nav.navbar-nav.navbar-right
                        li: a Welcome, Admin
                        li: a(href="/dashboard/logout") Logout
                    ul.nav.navbar-nav.navbar-left
                        li(class=(page === 'dashboard') ? 'active' : ''): a(href="/dashboard") Dashboard
                        li(class=(page === 'products') ? 'active' : ''): a(href="/dashboard/products") Products
                        li(class=(page === 'category') ? 'active' : ''): a(href="/dashboard/category") Category
                        li(class=(page === 'articles') ? 'active' : ''): a(href="/dashboard/articles") Articles
                        li(class=(page === 'orders') ? 'active' : ''): a(href="/dashboard/orders") Orders

        header#title
            .container-fluid
                .row
                    .col-md-10
                        h1
                            span(class="glyphicon glyphicon-cog" aria-hidden="true")
                            = " Dashboard "
                            small Nu Magic
                    .col-md-2
                        .dropdown.create
                            button.btn.btn-success.dropdown-toggle(type="button" id="title-dropdown" data-toggle="dropdown") Create Content 
                                span.caret
                            ul.dropdown-menu
                                li: a(type="button" data-toggle="modal" data-target="#productModal") Add Products
                                li: a(type="button" data-toggle="modal" data-target="#categoryModal") Add Category
                                li: a(type="button" data-toggle="modal" data-target="#articleModal") Add Article
                                li: a(type="button" data-toggle="modal" data-target="#accountModal") Add Admin Account
        section#breadcrumb
            ol.breadcrumb
                li: a(href="/dashboard") Dashboard
                if (page && page != 'dashboard' )
                    li: a(href="/#{page}")= page
                if action
                    li: a(href="/#{page}/#{action}")= action 
        section#main
            .container
                .row
                    .col-md-3
                        .list-group
                            a.list-group-item(href="/dashboard" class=(page === 'dashboard') ? "active main-color-bg" : "") 
                                span(class="glyphicon glyphicon-cog" aria-hidden="true")
                                =' Dashboard'
                            a.list-group-item(href="/dashboard/products" class=(page === 'products') ? "active main-color-bg" : "") 
                                span(class="glyphicon glyphicon-shopping-cart" aria-hidden="true")
                                = ' Product'
                            a.list-group-item(href="/dashboard/category" class=(page === 'category') ? "active main-color-bg" : "") 
                                span(class="glyphicon glyphicon-list-alt" aria-hidden="true")
                                = ' Category'
                            a.list-group-item(href="/dashboard/articles" class=(page === 'articles') ? "active main-color-bg" : "") 
                                span(class="glyphicon glyphicon-pencil" aria-hidden="true")
                                = ' Article'
                            a.list-group-item(href="/dashboard/orders" class=(page === 'orders') ? "active main-color-bg" : "") 
                                span(class="glyphicon glyphicon-credit-card" aria-hidden="true")
                                = ' Order'
                            a.list-group-item(href="/dashboard/accounts" class=(page === 'accounts') ? "active main-color-bg" : "")
                                span(class="glyphicon glyphicon-user" aria-hidden="true")
                                = ' Accounts'
                    .col-md-9
                        block sections
        include modals
        block modal

        script(src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous")
